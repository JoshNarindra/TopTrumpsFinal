@model IEnumerable<TopTrumpsFinal.Models.DinoDeck>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="post" asp-controller="DinoDecks" asp-action="Play">
    <button type="submit" class="btn btn-primary">Play</button>
</form>

<form method="post" asp-action="Compare" asp-route-values=" new{firstCardId = firstCardID, secondCardId = secondCardId">
    <label for="firstCardId">Enter first card ID:</label>
    <input type="text" id="firstCardId" name="firstCardId">
    <br>
    <label for="secondCardId">Enter second card ID:</label>
    <input type="text" id="secondCardId" name="secondCardId">
    <br><br>
    <input type="submit" value="Compare Cards">
</form>


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GoodTemper)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KillerRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageLink)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Height)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GoodTemper)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KillerRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageLink)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DinoDeckID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DinoDeckID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DinoDeckID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
